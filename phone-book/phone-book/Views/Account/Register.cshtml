@model phone_book.AuthoClientApp.RegisterModel

<h2 class="authentication-main-header">
    Регистрация
</h2>
<form class="authentication-form" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label class="authentication-form-text" asp-for="Email">Введите Email</label>
            <input class="authentication-form-input" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label class="authentication-form-text" asp-for="Password">Введите пароль</label>
            <input class="authentication-form-input" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label class="authentication-form-text" asp-for="ConfirmPassword">Повторите пароль</label>
            <input class="authentication-form-input" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <ul class="authentication-form-list">
            <li class="authentication-form-item">
                <input type="submit" value="Зарегистрироваться" class="authentication-item-button" />
            </li>
        </ul>
    </div>
</form>