@model phone_book.AuthoClientApp.RegisterModel

<h2 class="authentication-main-header">
    Регистрация
</h2>
<form class="authentication-form" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <label class="text-field__label" asp-for="Email">Введите Email*</label>
        <input class="text-field__input" type="text" asp-for="Email" />
        <span asp-validation-for="Email" />

        <label class="text-field__label" asp-for="Password">Введите пароль*</label>
        <input class="text-field__input" asp-for="Password" />
        <span asp-validation-for="Password" />

        <label class="text-field__label" asp-for="ConfirmPassword">Повторите пароль*</label>
        <input class="text-field__input" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" />

        <input class="submit-field__input" type="submit" value="Зарегистрироваться" />
    </div>
</form>