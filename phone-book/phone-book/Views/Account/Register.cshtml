@model phone_book.AuthoClientApp.RegisterModel

<section id="register">
    <div class="container">
        <form class="authentication-form" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <h2 class="authentication-main-header">
                Регистрация
            </h2>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <input class="text-field__input" type="text" asp-for="Email" placeholder="Введите Email" />
                <span asp-validation-for="Email" />

                <input class="text-field__input" asp-for="Password" placeholder="Введите пароль" />
                <span asp-validation-for="Password" />

                <input class="text-field__input" asp-for="ConfirmPassword" placeholder="Повторите пароль" />
                <span asp-validation-for="ConfirmPassword" />

                <input class="submit-field__input" type="submit" value="Зарегистрироваться" />
            </div>
        </form>
    </div>
</section>
